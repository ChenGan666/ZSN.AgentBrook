@{
    var App = ViewBag.App as AppInfo;

    var AppTypeList = ViewBag.AppTypeList as List<BaseDictionaryInfo>;

    var SessionModelList = ViewBag.SessionModelList as List<LargeModelInfo>;
    var PreviewHost = ViewBag.PreviewHost as string;
}

@section Css
{
    <style>
        .layui-form-label {
            width: 120px;
        }
    </style>
}

<div class="layui-row">
    <div class="layui-card">
        <div class="layui-card-body">
            <form class="layui-form">

                <div class="layui-form-item">
                    <label class="layui-form-label">
                        <span class="x-red">*</span>AppID
                    </label>
                    <div class="layui-input-block">
                        <div class="layui-col-md9">
                            <input type="text" name="AppID" readonly  value="@App.AppID"
                                   autocomplete="off" class="layui-input">
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">
                        <span class="x-red">*</span>SecretKey
                    </label>
                    <div class="layui-input-block">
                        <div class="layui-col-md9">
                            <input type="text" name="SecretKey" readonly  value="@App.SecretKey"
                                   autocomplete="off" class="layui-input">
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">
                        <span class="x-red">*</span>应用名称
                    </label>
                    <div class="layui-input-block">
                        <div class="layui-col-md9">
                            <input type="text" name="Name" lay-verify="required" value="@App.Name"
                                   autocomplete="off" class="layui-input">
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">
                        <span class="x-red">*</span>图标
                    </label>
                    <div class="layui-input-block">
                        <div class="layui-col-md9">
                            <input type="text" name="AICON" lay-verify="required" value="@App.AICON"
                                   autocomplete="off" class="layui-input AICON">
                            <div id="file-upload-container">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">
                        <span class="x-red">*</span>应用类型
                    </label>
                    <div class="layui-input-block">
                        <div class="layui-col-md9">
                            <div id="App_Type" class="xm-select-demo"></div>
                            <input type="hidden" name="DicIDList" lay-verify="required" value="@App.DicIDList"
                                   autocomplete="off" class="layui-input DicIDList">
                            <input type="hidden" name="DicNameList" lay-verify="required" value="@App.DicNameList"
                                   autocomplete="off" class="layui-input DicNameList">
                        </div>
                    </div>
                </div>

                
                <div class="layui-form-item">
                    <label class="layui-form-label">
                        <span class="x-red"></span>简述
                    </label>
                    <div class="layui-input-block">
                        <div class="layui-col-md9">
                            <textarea type="text" name="Description" 
                                      autocomplete="off" class="layui-input Description">@App.Description</textarea>
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">
                        <span class="x-red">*</span>会话模型(综合能力)
                    </label>
                    <div class="layui-input-block">
                        <div class="layui-col-md9">
                            <select class="SessionModel" name="SessionModel" lay-verify="required">
                                <option value="">请选择一个模型</option>
                                @foreach (LargeModelInfo _model in SessionModelList)
                                {
                                    <option value="@_model.LargeModelID">@_model.Name</option>
                                }
                            </select>
                            <input type="hidden" name="SessionModelID" lay-verify="required" value="@App.SessionModelID"
                                   autocomplete="off" class="layui-input SessionModelID">
                            <input type="hidden" name="SessionModelName" lay-verify="required" value="@App.SessionModelName"
                                   autocomplete="off" class="layui-input SessionModelName">
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">
                        <span class="x-red"></span>提示词
                    </label>
                    <div class="layui-input-block">
                        <div class="layui-col-md9">
                            <textarea type="text" name="Prompt" 
                                      autocomplete="off" class="layui-input Prompt">@App.Prompt</textarea>
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">
                        <span class="x-red">*</span>温度系数
                    </label>
                    <div class="layui-input-block">
                        <div class="layui-col-md9">
                            <input type="text" name="TemperatureCoefficient" lay-verify="required" value="@App.TemperatureCoefficient"
                                   autocomplete="off" class="layui-input TemperatureCoefficient">
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">
                        <span class="x-red">*</span>采用系数
                    </label>
                    <div class="layui-input-block">
                        <div class="layui-col-md9">
                            <input type="text" name="TopPCoefficient" lay-verify="required" value="@App.TopPCoefficient"
                                   autocomplete="off" class="layui-input TopPCoefficient">
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">
                        <span class="x-red">*</span>创建时间
                    </label>
                    <div class="layui-input-block">
                        <div class="layui-col-md9">
                            <input type="text" name="CreateTime" readonly lay-verify="required" placeholder="YYYY-MM-DD HH:mm" value="@App.CreateTime.ToCurrentTime()"
                                   autocomplete="off" class="layui-input CreateTime">
                        </div>
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="layui-form-label">
                        <span class="x-red">*</span>更新时间
                    </label>
                    <div class="layui-input-block">
                        <div class="layui-col-md9">
                            <input type="text" name="LastUpdateTime" readonly lay-verify="required" placeholder="YYYY-MM-DD HH:mm" value="@App.LastUpdateTime.ToCurrentTime()"
                                   autocomplete="off" class="layui-input LastUpdateTime">
                        </div>
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="layui-form-label">
                        状态
                    </label>
                    <div class="layui-input-inline">
                        <input type="radio" name="SystemStatus" value="0" title="未发布" @(App.SystemStatus == 0 ? "checked" : "")>
                        <input type="radio" name="SystemStatus" value="-1" title="屏蔽" @(App.SystemStatus == -1 ? "checked" : "")>
                        <input type="radio" name="SystemStatus" value="1" title="未运行" @(App.SystemStatus == 1 ? "checked" : "")>
                        <input type="radio" name="SystemStatus" value="2" title="运行中" @(App.SystemStatus == 2 ? "checked" : "")>
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="layui-form-label">
                        <span class="x-red"></span>所属用户编号（空则为系统公共应用）
                    </label>
                    <div class="layui-input-block">
                        <div class="layui-col-md9">
                            <input type="text" name="MemberID" value="@App.MemberID" autocomplete="off" class="layui-input MemberID">
                            <input type="text" name="MemberName" value="@App.MemberName" autocomplete="off" class="layui-input MemberName">
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-input-block">
                        <input type="hidden" name="KnowledgeBases" id="KnowledgeBases" value="" />
                        <button class="layui-btn save" lay-filter="save" lay-submit>保存</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Js
{
    <script src="/layuiadmin/modules/xm-select.js"></script>
    <script>
        layui.use(function () {
            var form = layui.form,
                layer = layui.layer,
                xmSelect = layui.xmSelect;
            form.render();

            $(".SessionModel").val("@App.SessionModelID");
            form.render("select");

            var AppTypeStr = [@App.DicIDList];
            var AppTypeList = xmSelect.render({
                el: '#App_Type',
                toolbar: {
                    show: true,
                },
                filterable: true,
                height: '500px',
                data: [
                    @foreach (var AppType in AppTypeList)
                    {
                    @Html.Raw("  { name: '" + AppType.DicName + "', value: '" + AppType.DicId + "'},")
                    }

                ]
            });

            if (AppTypeStr) {
                var _setValue = [];
                for (var i = 0; i < AppTypeStr.length; i++) {
                    _setValue.push(AppTypeStr[i]);
                }
                AppTypeList.setValue(_setValue);
            }
            function GetApp_Type() {
                var _value = AppTypeList.getValue();
                var _id = [];
                var _name = [];
                if (_value) {
                    for (var i = 0; i < _value.length; i++) {
                        _id.push(_value[i].value);
                        _name.push(_value[i].name);
                    }
                }
                $('.DicIDList').val(_id.join(','));
                $('.DicNameList').val(_name.join(','));
            }

            $('.save').click(function () {
                GetApp_Type();
                $('.SessionModelID').val($(".SessionModel option:selected").val());
                $('.SessionModelName').val($(".SessionModel option:selected").text());
            });

            //提交
            form.on('submit(save)', function (obj) {
                layer.load(0);

                $.ajax({
                    url: '@Url.Action("AppSave")',
                    type: 'POST',
                    data: obj.field,
                    success: function (rst) {
                        layer.closeAll();
                        if (rst) {
                            layer.msg(rst.ErrorDesc, { icon: 1 });
                            if (rst.Status) {
                                if (parent) {
                                    parent.location.reload();
                                } else {
                                    location.reload();
                                }
                            }
                        }
                    }
                });
                return false;
            });
        });
    </script>
}
@section FileUpload {

    <script>
        $(function () {
            var form = layui.form, layer = layui.layer;
            form.render();

            var _AICON = function () {
                var fileCodeElement = $('.AICON');
                var fileUploadContainer = $('#file-upload-container');

                var options = {
                    url: '/Controls/UploadFiles/Save',
                    previewType: 'img',
                    previewHost: '@PreviewHost',
                    previewW: 150,
                    previewH: 150,
                    setPicW: 300,
                    setPicH: 300,
                    layui: layui,
                    formData: {
                        //example: 'test'
                    },
                };

                FileUploadPlugin(fileUploadContainer, fileCodeElement, options);
            };
            _AICON();
        });

    </script>
}